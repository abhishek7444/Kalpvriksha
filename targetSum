#include<stdio.h>
#include<stdlib.h>


int main()
{
    int size;
    printf("Enter the size of array: ");
    scanf("%d",&size);
    getchar();
    int *array = (int*) malloc(sizeof(int)*size);
    printf("Enter the elements: ");
    for(int i =0;i<size;i++)
    {
       scanf("%d",&array[i]);
    }
    
    getchar();
    int target;
    printf("Enter the value of target :");
    scanf("%d",&target);
    
    int pointer1=0;
    int pointer2 = size-1;
    int flag = 0;
    
    while(pointer1 < pointer2)
    {
        int sum = array[pointer1] + array[pointer2];
        if(sum == target)
        {
            flag = 1;
            break;
        }
        else if(sum<target)
        {
            pointer1++;
        }
        else
        {
            pointer2--;
        }
    }
    if(flag==0)
    {
        printf("Pair ddoesn't exists with target sum %d ",target);
    }
    else
    {
        printf("Pair exists with target sum %d ",target);
    }
    
    
    

}

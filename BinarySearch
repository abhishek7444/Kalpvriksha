#include<stdio.h>
#include<stdlib.h>

int binarySeach(int* array, int size, int target)
{
    int start = 0;
    int end = size-1;
    while(start<end)
    {
        int mid = start + (end-start)/2;
        if(array[mid]==target)
        {
            return 1;
        }
        else if(array[mid] < target)
        {
            start = mid+1;
        }
        else 
        {
            end = mid-1;
        }
    }
    return 0;
    
}
void merge(int* arr, int start, int end)
{
    int mid = start + (end-start) / 2;
    int length1 = mid-start+1;
    int length2 = end - mid;
    int* leftArray = (int*) malloc(sizeof(int) * length1);
    int* rightArray = (int*) malloc(sizeof(int)*length2);
    int index1=0;
    int index2 =0;
    int mainArrayIndex = start;
    for(index1= 0; index1<length1; index1++)
    {
        leftArray[index1] = arr[mainArrayIndex++];
    }

    mainArrayIndex = mid+1;
    for(index2 = 0; index2 <length2;index2++)
    {
        rightArray[index2] = arr[mainArrayIndex++];
    }
    mainArrayIndex = start;
    index1 = 0;
    index2 =0;
    while(index1<length1 && index2<length2)
    {
        if(leftArray[index1] <= rightArray[index2]){
            arr[mainArrayIndex++] = leftArray[index1++];
        }
        else{
            arr[mainArrayIndex++] = rightArray[index2++];
        }
    }
    while(index1<length1)
    {
        arr[mainArrayIndex++] = leftArray[index1++];
    }
    while(index2<length2)
    {
        arr[mainArrayIndex++] = rightArray[index2++];
    }
    free(leftArray);
    free(rightArray);
}
void Sort(int*arr, int start , int end)
{
    if(start >= end) return;

    int mid = start + (end-start) / 2;

    Sort(arr,start,mid);
    Sort(arr,mid+1,end);
    merge(arr,start,end);

}
int main()
{
    int size;
    printf("Enter the size of Array : ");
    scanf("%d",&size);
    getchar();
    int *array = (int*) malloc(sizeof(int)*size);
    printf("Enter the elements: ");
    for(int i =0;i<size;i++)
    {
       scanf("%d",&array[i]);
    }
    getchar();
    int target;
    printf("Enter the target Element : ");
    scanf("%d",&target);
    Sort(array,0,size-1);
    int found = binarySeach(array,size,target);
    
    if(found==0)
    {
        printf("Target Not Found ");
    }
    else
    {
        printf("Target Found ");
    }
}

#include<stdio.h>
#include<stdlib.h>

void merge(int* array,int start, int end)
{
    int mid = start+(end-start)/2;
    int length1 = mid-start+1;
    int length2 = end - mid;
    
    int* leftArray = (int*) malloc(sizeof(int)*length1);
    int* rightArray = (int*) malloc(sizeof(int) * length2);
    int index1 =0;
    int index2 =0;
    
    int mainArrayIndex = start;
    
    for(index1 = 0; index1 < length1; index1++)
    {
        leftArray[index1] = array[mainArrayIndex++];
    }
    mainArrayIndex = mid+1;
    for(index2=0;index2<length2;index2++)
    {
        rightArray[index2] = array[mainArrayIndex++];
    }
    
    index1=0;
    index2=0;
    
    mainArrayIndex =start;
    
    while(index1<length1 && index2<length2)
    {
        if(leftArray[index1] <= rightArray[index2])
        {
            array[mainArrayIndex++] = leftArray[index1++];
        }
        else
        {
            array[mainArrayIndex++] = rightArray[index2++];
        }
    }
    while(index1<length1)
    {
        array[mainArrayIndex++] = leftArray[index1++];
    }
    while(index2<length2)
    {
        array[mainArrayIndex++] = rightArray[index2++];
    }
    free(leftArray);
    free(rightArray);
}
void mergeSort(int* array,int start, int end)
{
    if(start>=end) return;
    int mid = start + (end-start)/2;
    
    mergeSort(array,start,mid);
    mergeSort(array,mid+1,end);
    merge(array,start,end);
}
int main()
{
    int size;
    printf("Enter the size of Array : ");
    scanf("%d",&size);
    getchar();
    int *array = (int*) malloc(sizeof(int)*size);
    printf("Enter the elements: ");
    for(int i =0;i<size;i++)
    {
       scanf("%d",&array[i]);
    }
    int start = 0;
    mergeSort(array,start,size-1);
    for(int i =0;i<size;i++)
    {
        printf("%d ",array[i]);
    }
}
